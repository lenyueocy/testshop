/* pages/addr/addr.wxss */
.item{
  background-color: #E5E7F6;
  padding: 20rpx;
  margin: 10rpx;
  border-radius: 5rpx;
}
.addr-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.info>view:first-of-type{
  font-weight: bold;
  margin-bottom: 15rpx;
}
.info>view:last-of-type{
  color: #9A9CA8;
  font-size: 22rpx;
}
.icon-img{
  width: 32rpx;
  height: 32rpx;
}
.positionbox{
  background-color: #30958c;
  padding: 25rpx;
}
.positionbox>view{
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 15rpx;
}
.positionbox>view:last-child{
  margin-bottom: 0px;
}
.command{
  margin-top: 20rpx;
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  color: #000000;
  font-size: 28rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #cacaca;
  padding: 0px 25rpx;
}
.all{
  background-color: #f7f9ff;
}
.items{
  background-color: #ffffff;
  display: flex;
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #cacaca;
}
.items_top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.items_tr{
 color:#999999;
 font-size:15rpx;
 display:flex;
 align-items:center;
}
.items_tr>image{
  width: 18rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.items_tr >view{
  color: #999999;
  font-size: 28rpx;
}
.items_left{
  width:100%;
}
.items_right{
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.items_right>image{
  width: 17rpx;
  height: 30rpx;
}
.addr{
   color: #999999;
  font-size: 28rpx;
}